<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.atheel.prayer.EmptyStatus">

    <TextView android:text="@string/Empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_emptyRoom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView android:text="CurPrayer"
        android:id="@+id/textView_curPrayer"
        android:textSize="43sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_emptyRoom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp" />

    <TextView android:text="NextPrayer"
        android:id="@+id/textView_nextPrayer"
        android:layout_width="@dimen/activity_vertical_margin"
        android:layout_height="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textView_curPrayer"
        android:layout_alignStart="@+id/textView_emptyRoom"
        android:layout_alignEnd="@+id/textView_emptyRoom"
        android:textSize="43sp"/>


</RelativeLayout>
